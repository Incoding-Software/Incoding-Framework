        @using (Html.When(JqueryBind.InitIncoding)
                    .Do()
                    .Direct()
                    .OnSuccess(dsl => dsl.Window.Alert("Root Init"))
                    .AsHtmlAttributes()
                    .ToBeginTag(Html, HtmlTag.Div))
        {
            @(Html.When(JqueryBind.InitIncoding)
                  .Do()
                  .Direct()
                  .OnSuccess(dsl => dsl.Window.Alert("Init event"))
                  .When(JqueryBind.Click)
                  .Do()
                  .Direct()
                  .OnSuccess(dsl => dsl.Self().Core().Trigger.Invoke(JqueryBind.InitIncoding))
                  .AsHtmlAttributes()
                  .ToButton("Click"))
        }